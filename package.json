{
  "name": "project-helix",
  "displayName": "Project Helix",
  "description": "Project Helix IntelliSense, syntax coloring, debugging and more",
  "version": "0.0.1",
  "publisher": "Adobe",
  "license": "Apache-2.0",
  "repository": "git@github.com:adobe/vscode-helix.git",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:htl"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "htl",
        "aliases": [
          "HTL",
          "HTML Template Language (HTL)",
          "htl"
        ],
        "extensions": [
          ".htl",
          ".htl.html"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "htl",
        "scopeName": "text.html.htl",
        "path": "./syntaxes/htl.tmLanguage.json",
        "injectTo": [
          "text.html.derived",
          "text.html.basic",
          "text.html"
        ],
        "embeddedLanguages": {
          "text.html": "html",
          "source.css": "css",
          "source.js": "javascript"
        }
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test-vscode": "node ./node_modules/vscode/bin/test",
    "test": "nyc mocha",
    "lint": "./node_modules/.bin/eslint .",
    "junit": "mocha --exit -R mocha-junit-reporter",
    "preversion": "npm run junit",
    "postversion": "git push origin master --follow-tags",
    "delete-git-tag": "git tag -d v$npm_package_version && git push origin :v$npm_package_version"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^11.9.0",
    "codecov": "^3.1.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-header": "^2.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "istanbul": "^1.1.0-alpha.1",
    "junit-report-builder": "^1.3.1",
    "mocha": "^6.0.2",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-parallel-tests": "^2.0.3",
    "nodemon": "^1.18.7",
    "nyc": "^14.0.0",
    "typescript": "^3.1.6",
    "vscode": "^1.1.22"
  },
  "dependencies": {
    "@adobe/helix-pipeline": "^1.0.0",
    "ajv": "^6.6.1",
    "fs-extra": "^7.0.1"
  }
}
